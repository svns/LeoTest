<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
            android:id="@+id/ll_item_contectt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2.5">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Избранное"
                    android:textColor="@color/color_grey"
                    android:layout_marginLeft="@dimen/size_24"
                    android:gravity="center"
                    android:textSize="@dimen/size_11s"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/size_58"
                        android:layout_height="@dimen/size_58"
                        android:layout_gravity="left"
                        android:layout_marginBottom="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_24"
                        android:layout_marginTop="@dimen/size_20"
                        android:background="@drawable/servise_detail_shape"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/service_icon"
                            android:layout_width="@dimen/size_33"
                            android:layout_height="@dimen/size_33"
                            android:layout_gravity="center"
                            tools:src="@drawable/kyivstar" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:paddingTop="@dimen/size_8"
                android:layout_weight="7.5">

                <ImageView
                    android:id="@+id/line_image"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/listsline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="@dimen/size_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="8"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Андрей Коллега"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/size_16s"/>


                        <TextView
                            android:id="@+id/number_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="380956069011"
                            android:layout_marginTop="@dimen/size_3"
                            android:textColor="@color/color_grey"
                            android:textSize="@dimen/size_12s"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/size_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/star_icon"
                            android:layout_width="@dimen/size_24"
                            android:layout_height="@dimen/size_24"
                            tools:src="@drawable/star"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>